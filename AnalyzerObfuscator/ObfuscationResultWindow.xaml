<Window x:Class="AnalyzerObfuscator.ObfuscationResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnalyzerObfuscator"
        mc:Ignorable="d"
        Title="Analyzer Obfuscator - Obfuscation Result Window" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1"><Bold>Before obfuscation</Bold></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1"><Bold>After obfuscation</Bold></TextBlock>
        <FlowDocumentReader x:Name="before" Margin="10,35,10,10" Grid.Row="2"/>
        <FlowDocumentReader x:Name="reader" Margin="10,35,10,10" Grid.Row="2" Grid.Column="1"/>
        <Button x:Name="save" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Click="save_Click"/>
    </Grid>
</Window>
