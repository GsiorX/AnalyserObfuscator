<Window x:Class="AnalyzerObfuscator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnalyzerObfuscator"
        mc:Ignorable="d"
        Title="MainWindow" Height="230" Width="312">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="93" Margin="50,62,0,0" Height="16"><Run Language="pl-pl" Text="Select files"/></TextBlock>
        <DockPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <WrapPanel HorizontalAlignment="Left" DockPanel.Dock="Top" Margin="41,80,0,10">
                <Button Name="btnOpenFile" Click="btnOpenFile_Click">Open file 1</Button>
                <TextBox TextWrapping="Wrap" Width="120" Name="file1"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Left" DockPanel.Dock="Top" Margin="41,1,0,10">
                <Button Name="btnOpenFile2" Click="btnOpenFile2_Click">Open file 2</Button>
                <TextBox TextWrapping="Wrap" Width="120" Name="file2"/>
            </WrapPanel>
            <WrapPanel DockPanel.Dock="Top">
                <RadioButton Margin="41,1,0,10" Content="Analyse" Name="Analyse"/>
                <RadioButton Margin="41,1,0,10" Content="Obfuscate" Name="Obfuscate"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Right" DockPanel.Dock="Bottom">
                <Button Content="Next"/>
            </WrapPanel>
        </DockPanel>
    </Grid>
</Window>
